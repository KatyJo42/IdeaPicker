<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IdeaPicker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IdeaPicker.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Add Idea" Icon="add_tab">
            <ShellContent
                Title="Add Idea"
                ContentTemplate="{DataTemplate local:AddPage}"
                Route="AddPage" />
        </Tab>
        <Tab Title="List Ideas" Icon="find_tab">
            <ShellContent
                Title="List Ideas"
                ContentTemplate="{DataTemplate local:FindPage}"
                Route="FindPage" />
        </Tab>
    </TabBar>

</Shell>
