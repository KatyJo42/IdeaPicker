<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPicker.Views.AddPage">
    <ContentPage.Content>
        <StackLayout Padding="20,20">
            <Label Text="Add Idea" FontSize="Large" Margin="0,20,0,10" /> 
            <Border Stroke="Gray" StrokeThickness="1"> 
                <Entry x:Name="txtTitle" />
            </Border>    
            <Button Text="Add Idea" Margin="0,57,0,0" Clicked="Add_OnClicked" />       
                
        </StackLayout>
    </ContentPage.Content>
</ContentPage>